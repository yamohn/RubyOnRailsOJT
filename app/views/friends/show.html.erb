
<div class="card">
  <h5 class="card-header"><%= @friend.first_name %> <%= @friend.last_name %></h5>
  <div class="card-body">
    <p class="card-text"><%= @friend.email %> | <%= @friend.phone %> | <%= @friend.twitter %></p>
  </div>

<div class="card-body">
    <%= link_to "Edit this friend", edit_friend_path(@friend),class:"btn btn-secondary"  %> 
  <%= link_to "Back to friends", friends_path, class:"btn btn-secondary"  %>
</div>
<div class="card-body">
    <%= button_to "Delete this friend", @friend, method: :delete, class:"btn btn-outline-danger"  %>
</div>

</div>


